{
  "name": "@game-builder/backend",
  "version": "0.0.1",
  "description": "Elysia + Bun API server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "drizzle-kit generate",
